{{!

    @template theme_ucsf/branding
    @see theme_ucsf/navbar

    This template category-specific branding.

    Example context (json):
    {
        "link": "https://lor.em/ipsum",
        "linktarget": "_blank",
        "logo": "/path/to/logo.png",
        "name": "Lorem Ipsum",
    }
}}
{{#link}}
    <a href="{{{ link }}}" class="navbar-brand ucsf-brand d-none d-md-flex align-items-center m-0 mr-4 p-0 aabtn" target="{{ linktarget }}">
        <img src="{{ logo }}" class="logo mr-1" alt="{{ name }}" title="{{ name }}">
    </a>
{{/link}}
{{^link}}
    <span class="navbar-brand ucsf-brand d-none d-md-flex align-items-center m-0 mr-4 p-0">
        <img src="{{ logo }}" class="logo mr-1" alt="{{ name }}" title="{{ name }}">
    </span>
{{/link}}